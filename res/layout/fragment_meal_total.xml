<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="1.0" >
			
	    <TextView android:id="@+id/meal_total_carbs_label"
	        android:text="@string/meal_total_carbs"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.6" />
	    
	    <TextView android:id="@+id/meal_total_carbs_text"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.4"
	        android:gravity="right" />
	    
	    <Button
	        android:id="@+id/meal_total_clear_button"
	        android:text="@string/meal_total_clear"
	        android:textSize="@dimen/text_size"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    
	</LinearLayout>

	<View
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:id="@+id/meal_total_separator"
	    android:visibility="visible"
	    android:background="@android:color/darker_gray"/>
		    
</LinearLayout>
