<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
		android:weightSum="1.0" >
			
	    <TextView android:id="@+id/meal_total_carbs_label"
	        android:text="@string/meal_total_carbs"
	        android:textColor="@color/total_carbs_text_color"
    		android:textStyle="bold"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.6" />
	    
	    <TextView android:id="@+id/meal_total_carbs_text"
	        android:textColor="@color/total_carbs_text_color"
    		android:textStyle="bold"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.4"
	        android:gravity="right" />
	    
	</LinearLayout>

	<View
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:id="@+id/meal_total_separator"
	    android:visibility="visible"
	    android:background="@android:color/darker_gray"/>
		    
</LinearLayout>
