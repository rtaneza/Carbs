<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:orientation="horizontal"
	android:paddingLeft="@dimen/padding_horizontal"
	android:paddingRight="@dimen/padding_horizontal"
	android:paddingTop="@dimen/padding_vertical"
	android:paddingBottom="@dimen/padding_vertical">

	<TextView android:id="@+id/delete_item_name"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/delete_item_carbs"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
		android:gravity="left"
	    />

	<TextView android:id="@+id/delete_item_name_extra"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
        android:layout_below="@+id/delete_item_name"
	    android:textSize="@dimen/text_size_small"
	    android:textColor="@android:color/tertiary_text_dark"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
		android:gravity="left"
	    />
	
	<TextView android:id="@+id/delete_item_carbs"
	    android:layout_width="64dp"
	    android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/delete_item_checkbox"
		android:paddingLeft="@dimen/padding_horizontal_half"
		android:paddingRight="@dimen/padding_horizontal"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
		android:gravity="right"
	    />
	
	<!-- 
	  clickable and focusable are set to false so that
	  the entire row is clickable.
	-->
	<CheckBox android:id="@+id/delete_item_checkbox"
	    android:layout_width="32dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
		android:paddingLeft="@dimen/padding_horizontal"
		android:paddingRight="0dp"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
        android:clickable="false"
        android:focusable="false"
    	android:button="@drawable/btn_check"
	    />
	
</RelativeLayout>
    